<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.streaming.personal.list">
	<namespace>PersonalList</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="PersonalList" remote-service="true" table="PersonalList" uuid="true">

		<!-- PK fields -->

		<column name="personalItemId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="description" type="String" />
		<column name="fileShort" type="String" />
		<column name="launch" type="boolean" />
		<column name="instancePk" type="long" />
		<column name="title" type="String" />

		<!-- Order -->

		<order by="asc">
			<order-column name="title" />
		</order>

		<!-- Finder methods -->

		<finder name="PersonalList" return-type="Collection">
			<finder-column name="personalItemId" />
		</finder>

		<!-- References -->

		<reference entity="AssetEntry" package-path="com.liferay.portlet.asset" />
	</entity>
	<exceptions>
		<exception>PersonalList</exception>
		<exception>PersonalListAllowedDenied</exception>
		<exception>PersonalListNotFound</exception>
	</exceptions>
</service-builder>
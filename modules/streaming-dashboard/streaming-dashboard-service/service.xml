<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" mvcc-enabled="true" package-path="com.streaming">
	<namespace>CarouselItemsDashboard</namespace>
	<!-- <entity data-source="sampleDataSource" local-service="true" name="Carousel" remote-service="false" session-factory="sampleSessionFactory" table="carousel" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" external-reference-code="group" name="CarouselDashboardManager" remote-service="true" uuid="true"  table="STG-CarouselDashboardManager">
		<!-- PK fields -->

		<column name="streamingId" primary="true" type="long" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="category" type="String" />
		<column name="colorTheme" type="String" />
		<column name="priority" type="String" />
		<column name="locale" type="Locale" />
		<column name="title" type="String" />
		<column name="user" type="User" />
		<column name="dashboardCategoryItem" type="DashboardCategoryItem" />

		<!-- Order -->

		<order by="asc">
			<order-column name="title" />
		</order>

		<!-- Finder methods -->

		<finder name="CreateNewCategoryItem" return-type="DashboardCategoryItem">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
			<finder-column name="DashboardCategoryItem" />
			<finder-column name="streamingId" />
		</finder>

		<finder name="GetCarouselItems" return-type="Collection">
			<finder-column name="companyId" />
			<finder-column name="groupId" />
			<finder-column name="streamingId" />
		</finder>

		<!-- References -->

		<reference entity="AssetCategory" package-path="com.liferay.asset.kernel.model" />

		<reference entity="AssetVocabulary" package-path="com.liferay.asset.kernel.model" />

		<reference entity="User" package-path="com.liferay.portal.kernel.model" />
	</entity>
	<exceptions>
		<exception>CarouselDashboardManager</exception>
		<exception>CarouselDashboardManagerRuleUser</exception>
		<exception>CarouselDashboardManagerNotFound</exception>
	</exceptions>
</service-builder>